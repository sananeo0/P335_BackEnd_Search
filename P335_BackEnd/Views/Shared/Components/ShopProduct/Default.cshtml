@model ShopIndexVM

<div class="row">
    @foreach (var produtc in Model.Products)
    {
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg">
                    <img src="~/img/featured/@produtc.ImageUrl">
                    <ul class="product__item__pic__hover">
                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="#">@produtc.Name</a></h6>
                    <h5>$@produtc.Price</h5>
                </div>
            </div>
        </div>
    }
</div>


<div class="product__pagination">
    @for (int i = 1; i <= Model.TotalPageCount; i++)
    {
        <a class="@(i==Model.CurrentPage ? "active page-btn" : "page-btn" )" data-page="@i">@i</a>
    }
    <a asp-action="Index" asp-route-page="@(Model.TotalPageCount == Model.CurrentPage ? Model.CurrentPage : Model.CurrentPage + 1)">
        <i class="fa fa-long-arrow-right"></i>
    </a>
</div>